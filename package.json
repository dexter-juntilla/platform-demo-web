{
  "name": "react-platform",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --open --content-base public/",
    "serve": "NODE_ENV=development webpack  && firebase serve --only hosting",
    "deploy-dev": "firebase use my-project-dev && NODE_ENV=development webpack && firebase deploy",
    "deploy-prod": "firebase use my-project-prod && NODE_ENV=production webpack && firebase deploy",
    "test": "jest --coverage",
    "flow:check": "flow check ./src/",
    "flow": "flow focus-check",
    "lint": "eslint",
    "eslint": "eslint --fix",
    "prettier": "prettier",
    "fmt": "prettier --config .prettierrc.yml --write \"{!(node_modules),!(__mock__)/**/}*.{jsx,js,json,md,ts}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{jsx,js}": [
      "flow focus-check",
      "eslint --fix",
      "git add"
    ],
    "*.{jsx,js,json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "formik": "^1.5.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-transition-group": "^2.5.3",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-saga": "^0.16.2",
    "reselect": "^4.0.0",
    "sass-loader": "^7.1.0",
    "validator": "^10.9.0",
    "webpack": "^4.28.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-transform-regenerator": "^7.0.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.5.0",
    "express": "^4.16.4",
    "file-loader": "^3.0.1",
    "firebase-admin": "^6.5.0",
    "firebase-functions": "^2.1.0",
    "firebase-tools": "^6.2.2",
    "flow-bin": "^0.87.0",
    "html-loader": "^0.5.5",
    "husky": "^1.2.0",
    "jest": "23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react-test-renderer": "^16.7.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "jest": {
    "collectCoverageFrom": [
      "app/redux/**/*.{js,jsx}",
      "!app/redux/**/*.action.{js,jsx}",
      "!app/redux/combinedReducers.js",
      "!app/redux/rootSaga.js"
    ]
  }
}
